<?xml version="1.0" encoding="ISO-8859-1"?>
<StudyForm>
  <Form FormId="175" FormName="CAM_SHORT" FormTitle="CAM - delirvurdering " Instructions="CAM (Confusion Assessment Score) er en enkel, validert test som utføres når man lurer på om en pasient har delir. Husk at det finnes både hyper- og hypoaktive delir. Hvis testen scorer positivt bør du lete etter årsaken til deliret; infeksjon, for lavt blodtrykk, medikamentbivirkninger.">
    <Page PageId="97" PageNumber="1" PageTitle="Boks 1">
        <Item ItemId="1000" ItemType="2" VarName="CAM_CHANGE" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="511" OrderNumber="1" ItemHeader="Akutte endringer" ItemText="Finnes det tegn på akutte endringer i pasientens mentale tilstand i forhold til hvordan hun/han er til vanlig?" ItemHelp="" MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="2307" OrderNumber="1" OptionText="Ja" VerboseText="Akutte endringer i mental tilstand." ShortCode="J"/>
                                <Answer AnswerId="2308" OrderNumber="2" OptionText="Nei" VerboseText="Ingen akutte endringer i mental tilstand." ShortCode="N"/>
                </FormItem>
        </Item>
    </Page>
    <Page PageId="98" PageNumber="2" PageTitle="Døgnvariasjon*">
        <Item ItemId="1001" ItemType="2" VarName="CAM_VARIATION" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="512" OrderNumber="2" ItemHeader="Døgnvariasjon" ItemText="Vekslet den (unormale) atferden i løpet av dagen?" ItemHelp="Tegnene hadde en tendens til å komme og gå eller øke eller avta i styrke." MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="2309" OrderNumber="1" OptionText="Ja" VerboseText="Døgnvariasjon tilstede." ShortCode="J"/>
                                <Answer AnswerId="2310" OrderNumber="2" OptionText="Nei" VerboseText="Ingen døgnvariasjon." ShortCode="N"/>
                </FormItem>
        </Item>
    </Page>
    <Page PageId="99" PageNumber="3" PageTitle="Uoppmerksomhet, tankegang og bevissthetsnivå*">
        <Item ItemId="1003" ItemType="2" VarName="CAM_UNFOCUSED" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="513" OrderNumber="3" ItemHeader="Uoppmerksomhet" ItemText="Hadde pasienten problemer med å holde oppmerksomheten?" ItemHelp="F.eks. lett distrahert, eller problemer med å få med seg det som ble sagt." MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="2311" OrderNumber="1" OptionText="Ja" VerboseText="Uoppmerksom." ShortCode="J"/>
                                <Answer AnswerId="2312" OrderNumber="2" OptionText="Nei" VerboseText="Ingen uoppmerksomhet." ShortCode="N"/>
                </FormItem>
        </Item>
    </Page>
    <Page PageId="100" PageNumber="4" PageTitle="Boks 2">
        <Item ItemId="1005" ItemType="2" VarName="CAM_DISORGANIZED" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="514" OrderNumber="4" ItemHeader="Desorganisert tankegang" ItemText="Var pasientens &lt;u&gt;tankegang&lt;/u&gt; desorganisert eller usammenhengende?" ItemHelp="F.eks. usammenhengende eller irrelevant konversasjon, uklare eller ulogiske tankerekker, uforutsigbar endring fra tema til tema." MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="2313" OrderNumber="1" OptionText="Ja" VerboseText="Desorganisert tankegang." ShortCode="J"/>
                                <Answer AnswerId="2314" OrderNumber="2" OptionText="Nei" VerboseText="Ikke desorganisert tankegang." ShortCode="N"/>
                </FormItem>
        </Item>
        <Item ItemId="1007" ItemType="2" VarName="CAM_CONSCIOUS" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="515" OrderNumber="5" ItemText="Generelt sett, hvordan vurderer du pasientens bevissthetsnivå?" ItemHelp="" MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="2315" OrderNumber="1" OptionText="Våken (normal)."/>
                                <Answer AnswerId="2316" OrderNumber="2" OptionText="Oppspilt (anspent)."/>
                                <Answer AnswerId="2321" OrderNumber="3" OptionText="Somnolent (søvnig, lett å vekke)."/>
                                <Answer AnswerId="2322" OrderNumber="4" OptionText="Stuporøs (omtåket, vanskelig å vekke)."/>
                                <Answer AnswerId="2323" OrderNumber="5" OptionText="Komatøs (umulig å vekke)."/>
                </FormItem>
        </Item>
    </Page>
    <Page PageId="101" PageNumber="5" PageTitle="Konklusjon">
        <Item ItemId="4315" ItemType="2" VarName="CAM_GROUP1" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="2997" OrderNumber="6" ItemText="Er alle spørsmål i boks 1 besvart med Ja?" ItemHelp="" Expression="2-IS0( IS0(CAM_CHANGE-1)+IS0(CAM_VARIATION-1)+IS0(CAM_UNFOCUSED-1)-3)" MinExpression="" MaxExpression="" ExcludeFromText="1" ExcludeCaption="0" Visibility="0" CarryForward="0" Optional="1">
                                <Answer AnswerId="23122" OrderNumber="1" OptionText="Ja"/>
                                <Answer AnswerId="23123" OrderNumber="2" OptionText="Nei" ShortCode="N"/>
                </FormItem>
        </Item>
        <Item ItemId="4316" ItemType="2" VarName="CAM_GROUP2" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="2998" OrderNumber="7" ItemText="Minst ett Ja-svar i boks 2?" ItemHelp="" Expression="2-ISPOS(IS0(CAM_DISORGANIZED-1)+ISPOS(CAM_CONSCIOUS-1))" MinExpression="" MaxExpression="" ExcludeFromText="1" ExcludeCaption="0" Visibility="0" CarryForward="0" Optional="1">
                                <Answer AnswerId="23124" OrderNumber="1" OptionText="Ja"/>
                                <Answer AnswerId="23125" OrderNumber="2" OptionText="Nei" ShortCode="N"/>
                </FormItem>
        </Item>
        <Item ItemId="4317" ItemType="2" VarName="CAM_RESULT" LoincScale="ORD" DisplayFormat="Vertical">
                <FormItem FormItemId="2999" OrderNumber="8" ItemHeader="Sannsynlig delir" ItemText="Er det sannsynlig at pasienten har delirium?" ItemHelp="" Expression="2-IS0(IS0(CAM_GROUP1-1)+IS0(CAM_GROUP2-1)-2)" MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
                                <Answer AnswerId="23130" OrderNumber="1" OptionText="Ja" VerboseText="Sannsynlig delir." ShortCode="J"/>
                                <Answer AnswerId="23131" OrderNumber="2" OptionText="Nei" VerboseText="Sannsynligvis ikke delir." ShortCode="N"/>
                </FormItem>
        </Item>
        <Item ItemId="3187" ItemType="4" VarName="CAM_COMMENT" LoincScale="NAR" DisplayFormat="">
                <FormItem FormItemId="1294" OrderNumber="9" ItemText="Eventuelle kommentarer" ItemHelp="" MinExpression="" MaxExpression="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="1">
                                <Answer/>
                </FormItem>
        </Item>
    </Page>
  </Form>
