<?xml version="1.0"?>
<StudyForm>
  <Form FormId="802" FormName="FORM802" FormTitle="PADL - Fysisk selvoppholdelsesskala">
    <Page PageTitle="Spørsmål, del 1*">
      <Item ItemId="9875" ItemType="2" VarName="VAR9875" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Toalett" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54051" OrderNumber="1" OptionText="Klarer seg selv på toalettet"/>
          <Answer AnswerId="54052" OrderNumber="2" OptionText="Trenger å bli påminnet og/eller hjelp til å vaske seg, har sjelden uhell (høyst en gang i uken)"/>
          <Answer AnswerId="54053" OrderNumber="3" OptionText="Er inkontinent (blære eller tarm) i søvne mer enn en gang i uken"/>
          <Answer AnswerId="54062" OrderNumber="4" OptionText="Er inkontinent (blære eller tarm) i våken tilstand mer enn en gang i uken"/>
          <Answer AnswerId="54063" OrderNumber="5" OptionText="Ingen kontroll over blære eller tarm"/>
        </FormItem>
      </Item>
      <Item ItemId="9877" ItemType="2" VarName="VAR9877" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Spising" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54066" OrderNumber="1" OptionText="Spiser uten hjelp"/>
          <Answer AnswerId="54067" OrderNumber="2" OptionText="Trenger litt hjelp under måltidene, eller trenger spesialtilberedte måltider eller annen hjelp i måltidssituasjonene"/>
          <Answer AnswerId="54068" OrderNumber="3" OptionText="Spiser med moderat hjelp og «søler»"/>
          <Answer AnswerId="54069" OrderNumber="4" OptionText="Trenger mye hjelp ved alle måltider"/>
          <Answer AnswerId="54070" OrderNumber="5" OptionText="Spiser ikke selv i det hele tatt, og motsetter seg forsøk på å bli matet av andre"/>
        </FormItem>
      </Item>
      <Item ItemId="9878" ItemType="2" VarName="VAR9878" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Påkledning" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54083" OrderNumber="1" OptionText="Kler av og på seg, velger ut klær fra egen garderobe"/>
          <Answer AnswerId="54084" OrderNumber="2" OptionText="Kler av og på seg med noe hjelp"/>
          <Answer AnswerId="54085" OrderNumber="3" OptionText="Trenger moderat hjelp ved påkledning og/eller utvelgelse av klær"/>
          <Answer AnswerId="54086" OrderNumber="4" OptionText="Trenger mye hjelp ved påkledning, men samarbeider med den som hjelper"/>
          <Answer AnswerId="54087" OrderNumber="5" OptionText="Ute av stand til å kle seg selv og setter seg til motverge ved hjelp fra andre"/>
        </FormItem>
      </Item>
      <Item ItemId="9879" ItemType="2" VarName="VAR9879" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Personlig stell" ItemHelp="Hår, negler, hender, ansikt, klær" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54095" OrderNumber="1" OptionText="Alltid pent kledd og velstelt, uten hjelp"/>
          <Answer AnswerId="54096" OrderNumber="2" OptionText="Steller seg selv, men trenger hjelp av og til f.eks til barbering"/>
          <Answer AnswerId="54097" OrderNumber="3" OptionText="Trenger moderat og regelmessig hjelp eller veiledning til personlig stell"/>
          <Answer AnswerId="54098" OrderNumber="4" OptionText="Trenger hjelp til alt personlig stell, men holder seg ren og velstelt ved hjelp av andre"/>
          <Answer AnswerId="54099" OrderNumber="5" OptionText="Motsetter seg aktivt andres hjelp til personlig stell"/>
        </FormItem>
      </Item>
      <Item ItemId="9880" ItemType="2" VarName="VAR9880" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Fysisk bevegelse" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54107" OrderNumber="1" OptionText="Går utendørs i by og på landevei"/>
          <Answer AnswerId="54108" OrderNumber="2" OptionText="Går i nærmiljøet"/>
          <Answer AnswerId="54109" OrderNumber="3" OptionText="Kan forflytte seg med hjelpemidler"/>
          <Answer AnswerId="54110" OrderNumber="4" OptionText="Kan ikke gå, men sitter oppreist uten støtte i stol eller rullestol. Kan ikke bevege seg uten hjelp."/>
          <Answer AnswerId="54111" OrderNumber="5" OptionText="Sengeliggende mer enn halvparten av tiden"/>
        </FormItem>
      </Item>
    </Page>
    <Page PageTitle="Hjelpemidler*">
      <Item ItemId="9881" ItemType="2" VarName="VAR9881" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Forflytter seg ved hjelp av:" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54122" OrderNumber="1" OptionText="Annen person"/>
          <Answer AnswerId="54123" OrderNumber="2" OptionText="Rekkverk"/>
          <Answer AnswerId="54124" OrderNumber="3" OptionText="Spaserstokk"/>
          <Answer AnswerId="54125" OrderNumber="4" OptionText="Gåstol"/>
          <Answer AnswerId="54126" OrderNumber="5" OptionText="Rullestol, kommer i og ut på egen hånd"/>
          <Answer AnswerId="54127" OrderNumber="6" OptionText="Rullestol, trenger hjelp til å komme i og ut"/>
        </FormItem>
      </Item>
    </Page>
    <Page PageTitle="Spørsmål, del 2*">
      <Item ItemId="9882" ItemType="2" VarName="VAR9882" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Bading" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="54134" OrderNumber="1" OptionText="Bader selv uten hjelp (badekar/dusj)"/>
          <Answer AnswerId="54135" OrderNumber="2" OptionText="Bader selv, men trenger hjelp i og ut av badekaret/dusjen"/>
          <Answer AnswerId="54136" OrderNumber="3" OptionText="Vasker kun ansikt og hender, og kan ikke bade/vaske resten av kroppen"/>
          <Answer AnswerId="54137" OrderNumber="4" OptionText="Vasker seg ikke selv men er samarbeidsvillig når andre hjelper"/>
          <Answer AnswerId="54138" OrderNumber="5" OptionText="Vasker seg ikke selv og gjør motstand når andre gjør forsøk på å hjelpe"/>
        </FormItem>
      </Item>
    </Page>
  </Form>
