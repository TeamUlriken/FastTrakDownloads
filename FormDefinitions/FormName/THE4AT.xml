<StudyForm>
  <Form FormId="1081" FormName="THE4AT" FormTitle="4AT - delirvurdering" Instructions="Instrumentet 4AT er utformet for en rask førstegangsvurdering av delirium og kognitiv svikt.">
    <Page>
      <Item ItemId="4684" ItemType="2" VarName="4AT_ALERT" LoincScale="ORD">
        <FormItem ItemText="Årvåkenhet (forholder seg normalt til omgivelsene)" ItemHelp="Pasienten virker tydelig døsig (dvs. vanskelig å vekke og/ eller er åpenbart søvnig ved undersøkelsen) eller motorisk urolig/hyperaktiv. Observer pasienten. Hvis pasienten sover, forsøk å vekke pasienten med vanlig stemme eller ved varsom berøring på skulderen. Be pasienten oppgi navn og adresse til hjelp med vurderingen." ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" ReadOnly="0" Optional="0">
          <Answer AnswerId="12475" OrderNumber="1" OptionText="Normal (helt årvåken, ikke urolig ved undersøkelse)" Score="0.00"/>
          <Answer AnswerId="12476" OrderNumber="2" OptionText="Lett søvnig &lt; 10 sekunder etter oppvåkning, deretter normal" Score="0.00"/>
          <Answer AnswerId="12477" OrderNumber="3" OptionText="Tydelig unormal(t)" Score="4.00"/>
        </FormItem>
      </Item>
      <Item ItemId="4685" ItemType="2" VarName="4AT_AMT4" LoincScale="ORD">
        <FormItem ItemText="AMT4 (Forkortet mental vurdering)" ItemHelp="Alder, fødselsdato, sted (navnet på sykehuset eller bygning), årstall" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" ReadOnly="0" Optional="0">
          <Answer AnswerId="12478" OrderNumber="1" OptionText="Ingen feil" Score="0.00"/>
          <Answer AnswerId="12479" OrderNumber="2" OptionText="1 feil" Score="1.00"/>
          <Answer AnswerId="12480" OrderNumber="3" OptionText="2 feil eller flere/ikke testbar" Score="2.00"/>
        </FormItem>
      </Item>
      <Item ItemId="4686" ItemType="2" VarName="4AT_AWARE" LoincScale="ORD">
        <FormItem ItemHeader="Oppmerksomhet" ItemText="Rekkefølgen av årets måneder baklengs" ItemHelp="Spør pasienten: “Kan du i baklengs rekkefølge nevne for meg årets måneder, begynn med desember». Å hjelpe pasienten med et innledende spørsmål «hva er måneden før desember?» er tillatt" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" ReadOnly="0" Optional="0">
          <Answer AnswerId="12481" OrderNumber="1" OptionText="Oppgir 7 måneder eller flere korrekt" Score="0.00"/>
          <Answer AnswerId="12482" OrderNumber="2" OptionText="Begynner, men klarer &lt;7 måneder/ avslår å begynne" Score="1.00"/>
          <Answer AnswerId="12483" OrderNumber="3" OptionText="Ikke testbar (er uvel, døsig, uoppmerksom)" Score="2.00"/>
        </FormItem>
      </Item>
      <Item ItemId="4687" ItemType="2" VarName="4AT_CHANGE" LoincScale="ORD">
        <FormItem ItemHeader="Akutt endring eller fluktuasjon av tilstand" ItemText="Holdepunkter for betydelige endringer eller fluktuasjoner knyttet til: årvåkenhet, kognisjon, annen mental funksjon" ItemHelp="F.eks. paranoide symptomer, hallusinasjoner) oppstått i løpet av de siste to uker og fremdeles tilstede de siste 24 timer" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" ReadOnly="0" Optional="0">
          <Answer AnswerId="12484" OrderNumber="1" OptionText="Nei" Score="0.00"/>
          <Answer AnswerId="12485" OrderNumber="2" OptionText="Ja" Score="4.00"/>
        </FormItem>
      </Item>
