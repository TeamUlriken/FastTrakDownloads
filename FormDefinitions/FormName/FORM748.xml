<?xml version="1.0" encoding="ISO-8859-1"?>
<StudyForm>
  <Form FormId="748" FormName="FORM748" FormTitle="POSSUM">
    <Page PageTitle="Physiology">
      <Item ItemId="9081" ItemType="2" VarName="PossumAge" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Age" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50553" OrderNumber="1" OptionText="&lt;61 yrs old"/>
          <Answer AnswerId="50554" OrderNumber="2" OptionText="61 - 70 yrs old"/>
          <Answer AnswerId="50555" OrderNumber="4" OptionText="&gt;70 yrs old"/>
        </FormItem>
      </Item>
      <Item ItemId="9082" ItemType="2" VarName="PossumCardiac" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Cardiac" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50556" OrderNumber="1" OptionText="No cardiac failure"/>
          <Answer AnswerId="50557" OrderNumber="2" OptionText="diuretic, digoxin, Rx for angina or hypertension"/>
          <Answer AnswerId="50558" OrderNumber="4" OptionText="peripheral oedema, warfarin, borderline cardiomyopathy"/>
          <Answer AnswerId="50559" OrderNumber="8" OptionText="raised JVP, cardiomegaly"/>
        </FormItem>
      </Item>
      <Item ItemId="9083" ItemType="2" VarName="PossumResp" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Respiratory" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50560" OrderNumber="1" OptionText="No dyspnoea"/>
          <Answer AnswerId="50561" OrderNumber="2" OptionText="dyspnoea on exertion, mild COAD"/>
          <Answer AnswerId="50562" OrderNumber="4" OptionText="limiting dyspnoea, moderate COAD"/>
          <Answer AnswerId="50563" OrderNumber="8" OptionText="dyspnoea at rest, pulmonary fibrosis/consolidation on x-ray"/>
        </FormItem>
      </Item>
      <Item ItemId="9084" ItemType="2" VarName="PossumEcg" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="ECG" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50564" OrderNumber="1" OptionText="ECG normal"/>
          <Answer AnswerId="50565" OrderNumber="4" OptionText="AF, rate 60-90"/>
          <Answer AnswerId="50566" OrderNumber="8" OptionText="Any other abnormal rhythm, &gt;4/min ectopics, Q waves, ST/T changes"/>
        </FormItem>
      </Item>
      <Item ItemId="9085" ItemType="2" VarName="PossumSys" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Systolic BP" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50595" OrderNumber="1" OptionText="110 - 130 mmHg"/>
          <Answer AnswerId="50596" OrderNumber="2" OptionText="100 - 109 or 131 - 170 mmHg"/>
          <Answer AnswerId="50597" OrderNumber="4" OptionText="&gt;170, or 90 - 99 mmHg"/>
          <Answer AnswerId="50598" OrderNumber="8" OptionText="&lt;90 mmHg"/>
        </FormItem>
      </Item>
      <Item ItemId="9086" ItemType="2" VarName="PossumPulse" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Pulse Rate" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50599" OrderNumber="1" OptionText="50 - 80 bpm"/>
          <Answer AnswerId="50600" OrderNumber="2" OptionText="40 - 49 or 81 -100 bpm"/>
          <Answer AnswerId="50601" OrderNumber="4" OptionText="101 - 120 bpm"/>
          <Answer AnswerId="50602" OrderNumber="8" OptionText="&lt;40 or &gt;120 bpm"/>
        </FormItem>
      </Item>
      <Item ItemId="9087" ItemType="2" VarName="PossumHb" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Haemoglobin" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50603" OrderNumber="1" OptionText="13 - 16 g/dL"/>
          <Answer AnswerId="50604" OrderNumber="2" OptionText="11.5 - 12.9 or 16.1 - 17 g/dL"/>
          <Answer AnswerId="50605" OrderNumber="4" OptionText="10 - 11.4 or 17.1 - 18 g/dL"/>
          <Answer AnswerId="50606" OrderNumber="8" OptionText="&lt;10 or &gt;18 g/dL"/>
        </FormItem>
      </Item>
      <Item ItemId="9088" ItemType="2" VarName="PossumWbc" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="WBC" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50607" OrderNumber="1" OptionText="4 - 10"/>
          <Answer AnswerId="50608" OrderNumber="2" OptionText="10.1 - 20 or 3.1 - 4"/>
          <Answer AnswerId="50609" OrderNumber="4" OptionText="&gt;20 or &lt;3"/>
        </FormItem>
      </Item>
      <Item ItemId="9089" ItemType="2" VarName="PossumUr" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Urea" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50610" OrderNumber="1" OptionText="&lt;7.6"/>
          <Answer AnswerId="50611" OrderNumber="2" OptionText="7.6 - 10"/>
          <Answer AnswerId="50612" OrderNumber="4" OptionText="10.1 - 15"/>
          <Answer AnswerId="50613" OrderNumber="8" OptionText="&lt;15"/>
        </FormItem>
      </Item>
      <Item ItemId="9090" ItemType="2" VarName="PossumNa" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Sodium" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50633" OrderNumber="1" OptionText="&gt;135 mmol/L"/>
          <Answer AnswerId="50634" OrderNumber="2" OptionText="131 - 135 mmol/L"/>
          <Answer AnswerId="50635" OrderNumber="4" OptionText="126 - 130 mmol/L"/>
          <Answer AnswerId="50636" OrderNumber="8" OptionText="&lt;126 mmol/L"/>
        </FormItem>
      </Item>
      <Item ItemId="9091" ItemType="2" VarName="PossumPot" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Potassium" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50641" OrderNumber="1" OptionText="3.5 - 5 mmol/L"/>
          <Answer AnswerId="50642" OrderNumber="2" OptionText="3.2 - 3.4 or 5.1 - 5.3 mmol/L"/>
          <Answer AnswerId="50643" OrderNumber="4" OptionText="2.9 - 3.1 or 5.4 - 5.9 mmol/L"/>
          <Answer AnswerId="50644" OrderNumber="8" OptionText="&lt;2.9 or &gt;5.9 mmol/L"/>
        </FormItem>
      </Item>
      <Item ItemId="9092" ItemType="2" VarName="PossumGcs" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="GCS" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50645" OrderNumber="1" OptionText="15"/>
          <Answer AnswerId="50646" OrderNumber="2" OptionText="12 - 14"/>
          <Answer AnswerId="50647" OrderNumber="4" OptionText="9 - 11"/>
          <Answer AnswerId="50648" OrderNumber="8" OptionText="&lt;9"/>
        </FormItem>
      </Item>
      <Item ItemId="9071" ItemType="1" VarName="PossumPhysiology" LoincScale="QN" UnitStr="points" DisplayFormat="">
        <FormItem ItemText="Physiology score (points)" ItemHelp="" Expression="PossumAge + PossumCardiac + PossumResp + PossumEcg + PossumSys + PossumPulse + PossumHb + PossumWbc + PossumUr + PossumNa + PossumPot + PossumGcs" MinExpression="12" MaxExpression="88" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="1">
          <Answer/>
        </FormItem>
      </Item>
    </Page>
    <Page PageTitle="Operation parameters" PageIntroduction="If calculating risk in a preoperative patient you will need to estimate the parameters below. You can return and modify the parameters post-operatively if required.">
      <Item ItemId="9093" ItemType="2" VarName="PossumOp" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Operation type" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50657" OrderNumber="1" OptionText="Minor Operation"/>
          <Answer AnswerId="50658" OrderNumber="2" OptionText="Moderate Operation"/>
          <Answer AnswerId="50659" OrderNumber="4" OptionText="Major Operation"/>
          <Answer AnswerId="50660" OrderNumber="8" OptionText="Complex Major Operation"/>
        </FormItem>
      </Item>
      <Item ItemId="9094" ItemType="2" VarName="PossumNum" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Number of procedures" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50661" OrderNumber="1" OptionText="One"/>
          <Answer AnswerId="50662" OrderNumber="4" OptionText="Two"/>
          <Answer AnswerId="50663" OrderNumber="8" OptionText="More than two"/>
        </FormItem>
      </Item>
      <Item ItemId="9095" ItemType="2" VarName="PossumBld" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Operative Blood Loss" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50667" OrderNumber="1" OptionText="&lt;100 mL"/>
          <Answer AnswerId="50668" OrderNumber="2" OptionText="101 - 500 mL"/>
          <Answer AnswerId="50669" OrderNumber="4" OptionText="501 - 999 mL"/>
          <Answer AnswerId="50670" OrderNumber="8" OptionText="&gt;1000 mL"/>
        </FormItem>
      </Item>
      <Item ItemId="9096" ItemType="2" VarName="PossumCont" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Peritoneal Contamination" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50671" OrderNumber="1" OptionText="No soiling"/>
          <Answer AnswerId="50672" OrderNumber="2" OptionText="Minor soiling"/>
          <Answer AnswerId="50673" OrderNumber="4" OptionText="Local pus"/>
          <Answer AnswerId="50674" OrderNumber="8" OptionText="Free bowel content, pus or blood"/>
        </FormItem>
      </Item>
      <Item ItemId="9097" ItemType="2" VarName="PossumMalig" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="Malignancy Status" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50679" OrderNumber="1" OptionText="Not malignant"/>
          <Answer AnswerId="50680" OrderNumber="2" OptionText="Primary malignancy only"/>
          <Answer AnswerId="50681" OrderNumber="4" OptionText="Malignancy + nodal mets"/>
          <Answer AnswerId="50682" OrderNumber="8" OptionText="Malignancy + distant mets"/>
        </FormItem>
      </Item>
      <Item ItemId="9098" ItemType="2" VarName="PossumCepod" LoincScale="ORD" DisplayFormat="">
        <FormItem ItemText="CEPOD" ItemHelp="" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="0">
          <Answer AnswerId="50687" OrderNumber="1" OptionText="elective"/>
          <Answer AnswerId="50688" OrderNumber="4" OptionText="urgent/emergency"/>
          <Answer AnswerId="50689" OrderNumber="8" OptionText="emergency (within 2 hrs)"/>
        </FormItem>
      </Item>
      <Item ItemId="9070" ItemType="1" VarName="PossumSurgery" LoincScale="QN" UnitStr="points" DisplayFormat="">
        <FormItem ItemText="Operative severity score (points)" ItemHelp="" Expression="PossumOp + PossumNum + PossumBld + PossumCont + PossumMalig + PossumCepod" MinExpression="6" MaxExpression="48" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="1">
          <Answer/>
        </FormItem>
      </Item>
    </Page>
    <Page PageTitle="POSSUM Risikoberegning" PageIntroduction="Disse er ikke riktige ennå, mangler formel for morbiditet, og må sjekke formel for mortalitet.">
      <Item ItemId="9099" ItemType="1" VarName="PossMorbHelper" LoincScale="QN" DisplayFormat="">
        <FormItem ItemText="Helper" ItemHelp="" Expression="-7.04 + (0.13 * PossumPhysiology) + (0.16 * PossumSurgery)" MinExpression="-1000" MaxExpression="1000" ExcludeFromText="0" ExcludeCaption="0" Visibility="-1" CarryForward="0" Optional="1" Decimals="4">
          <Answer/>
        </FormItem>
      </Item>
      <Item ItemId="9072" ItemType="1" VarName="PPossumMorbidity" LoincScale="QN" UnitStr="%" DisplayFormat="">
        <FormItem ItemHeader="Morbiditet" ItemText="P-Possum forventet morbiditet (%)" ItemHelp="" Expression="EXP(PossMorbHelper)/( EXP(PossMorbHelper) + 1 )" MinExpression="0" MaxExpression="100" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="1" Decimals="2">
          <Answer/>
        </FormItem>
      </Item>
      <Item ItemId="9100" ItemType="1" VarName="PossMortHelper" LoincScale="QN" DisplayFormat="">
        <FormItem ItemText="Helper" ItemHelp="" MinExpression="-1000" MaxExpression="1000" ExcludeFromText="0" ExcludeCaption="0" Visibility="-1" CarryForward="0" Optional="1" Decimals="4">
          <Answer/>
        </FormItem>
      </Item>
      <Item ItemId="9073" ItemType="1" VarName="PPossumMortality" LoincScale="QN" UnitStr="%" DisplayFormat="">
        <FormItem ItemHeader="Mortalitet" ItemText="P-Possum forventet mortalitet (%)" ItemHelp="" MinExpression="0" MaxExpression="50" ExcludeFromText="0" ExcludeCaption="0" Visibility="1" CarryForward="0" Optional="1" Decimals="2">
          <Answer/>
        </FormItem>
      </Item>
    </Page>
  </Form>
